{{#if products}}

<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <ul class="list-group">
            {{#each products }}
                        <li class="list-group-item">
                <span class="badge">{{this.qty}}</span>
                <strong>{{this.item.product}}</strong>
                <span class="label label-success">{{ this.price }}</span>
                <div class="btn-group">
                    <p class="buttob mt-5"> <a href="/reduce/{{this.item._id}}" class="btn btn-lg btn-success">Reduce by one</a>&nbsp; &nbsp; </p> 
                    <p class="buttob mt-5"> <a href="/remove/{{this.item._id}}" class="btn btn-lg btn-success">Remove</a>&nbsp; &nbsp; </p> 
                    
                </div>
            </li>
            {{/each }}
        </ul>
    </div>
</div>
<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <strong>Total: {{ totalPrice }}</strong>
    </div>
</div>

<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <strong>Total: </strong>
        <a href="/checkout/" type="button" class="btn btn-success">Checkout</a>
    </div>
</div>

{{else}}

<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <h2>no items</h2>
    </div>
</div>

{{/if}}


